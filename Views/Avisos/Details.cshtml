@model ProjetoCorina2.Models.Aviso

@{
    ViewData["Title"] = "Detalhes do Aviso";
}

<style>
    .aviso-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 24px #0001;
        padding: 32px 24px 24px 24px;
        margin: 32px auto;
        max-width: 600px;
    }

    .aviso-title {
        text-align: center;
        font-size: 2rem;
        font-weight: 700;
        color: #b71c1c;
        margin-bottom: 18px;
        letter-spacing: 1px;
    }

    .aviso-dl dt {
        font-weight: 600;
        color: #b71c1c;
    }

    .aviso-dl dd {
        margin-bottom: 12px;
    }
</style>

<div class="aviso-card">
    <div class="aviso-title">@ViewData["Title"]</div>
    <hr />
    <dl class="row aviso-dl">
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Aluno)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Aluno.Nome)</dd>
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Descricao)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Descricao)</dd>
    </dl>
    <div class="text-center mt-4">
        <a asp-action="Edit" class="btn btn-secondary px-4" asp-route-id="@Model?.AvisoId">Editar</a>
        <a asp-action="Index" class="btn btn-outline-danger ms-2">Voltar</a>
    </div>
</div>
