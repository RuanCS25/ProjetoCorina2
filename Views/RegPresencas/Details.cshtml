@model ProjetoCorina2.Models.RegPresenca

@{
    ViewData["Title"] = "Detalhes da Presença";
}

<style>
    .registro-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 24px #0001;
        padding: 32px 24px 24px 24px;
        margin: 32px auto;
        max-width: 600px;
    }

    .registro-title {
        text-align: center;
        font-size: 2rem;
        font-weight: 700;
        color: #b71c1c;
        margin-bottom: 18px;
        letter-spacing: 1px;
    }

    .registro-dl dt {
        font-weight: 600;
        color: #b71c1c;
    }

    .registro-dl dd {
        margin-bottom: 12px;
    }
</style>

<div class="registro-card">
    <div class="registro-title">@ViewData["Title"]</div>
    <hr />
    <dl class="row registro-dl">
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Alunos)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Alunos.Nome)</dd>
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DataPresenca)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.DataPresenca)</dd>
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Refeicao)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Refeicao)</dd>
    </dl>
    <div class="text-center mt-4">
        <a asp-action="Edit" class="btn btn-secondary px-4" asp-route-id="@Model?.RegPresencaId">Editar</a>
        <a asp-action="Index" class="btn btn-outline-danger ms-2">Voltar</a>
    </div>
</div>
