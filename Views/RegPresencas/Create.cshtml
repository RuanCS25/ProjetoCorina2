@model ProjetoCorina2.Models.RegPresenca

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>RegPresenca</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AlunoId" class="control-label"></label>
                <select asp-for="AlunoId" class="form-control" asp-items="ViewBag.AlunoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DataPresenca" class="control-label"></label>
                <input asp-for="DataPresenca" class="form-control" />
                <span asp-validation-for="DataPresenca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Refeicao" class="control-label"></label>
                <input asp-for="Refeicao" class="form-control" />
                <span asp-validation-for="Refeicao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-secondary" />
                <a asp-action="Index" class="btn btn-outline-danger">Sair</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
