@model IEnumerable<ProjetoCorina2.Models.Horario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Criar Novo</a>
</p>
<table class="table table-dark table-striped ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Turno)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Turno)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.HorarioId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.HorarioId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.HorarioId">Delete</a>
                </td>
            </tr>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Turno)
                </td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.HorarioId" class="btn btn-outline-secondary">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.HorarioId" class="btn btn-outline-secondary">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.HorarioId" class="btn btn-outline-danger">Deletar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
