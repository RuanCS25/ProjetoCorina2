@{
    Layout = "_Layout";
}

<style>
    body, .menu-modern-bg {
        background: white;
        color: red;
        font-family: 'Montserrat', Arial, sans-serif;
        min-height: 100vh;
        margin: 0;
        padding: 0;
    }

    .menu-modern-bg {
        padding: 40px 0 0 0;
        position: relative;
        overflow: hidden;
        text-align: center;
    }

    .menu-logo {
        font-size: 2.5rem;
        font-weight: bold;
        letter-spacing: 0.2em;
        margin-bottom: 0.2em;
        margin-top: 0.5em;
    }

    .menu-logo-icon {
        margin: 0.2em auto 0.5em auto;
        display: block;
        color: red;
        /* Remova font-size se não for usar ícone de fonte */
        width: 100px;
        height: 100px;
    }

    .menu-subtitle {
        font-size: 1.1rem;
        letter-spacing: 0.2em;
        margin-bottom: 2.5em;
        color: red;
    }

    .menu-sections {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 40px;
        margin-bottom: 2em;
    }

    .menu-section {
        flex: 1 1 320px;
        max-width: 400px;
        min-width: 260px;
        padding: 0 10px;
    }

    .menu-section-title {
        font-size: 1.5rem;
        font-weight: bold;
        letter-spacing: 0.15em;
        margin: 1.5em 0 1em 0;
        position: relative;
        color: red;
        text-transform: uppercase;
    }

        .menu-section-title:before,
        .menu-section-title:after {
            content: '';
            display: inline-block;
            width: 18px;
            height: 2px;
            background: red;
            vertical-align: middle;
            margin: 0 10px;
        }

        .menu-section-title:before {
            margin-left: 0;
        }

        .menu-section-title:after {
            margin-right: 0;
        }

    .menu-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .menu-item-row {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1.2em;
        border-bottom: 1px solid #333;
        padding-bottom: 0.7em;
    }

    .menu-item-info {
        text-align: left;
        max-width: 75%;
    }

    .menu-item-name {
        font-family: 'Dancing Script', cursive, Arial, sans-serif;
        font-size: 1.15rem;
        font-weight: 600;
        margin-bottom: 0.1em;
        color: red;
    }

    .menu-item-desc {
        font-size: 0.95rem;
        color: red;
        font-style: italic;
        margin-bottom: 0.1em;
    }

    .menu-item-price {
        font-size: 1.1rem;
        font-weight: bold;
        color: red;
        min-width: 48px;
        text-align: right;
        font-family: 'Montserrat', Arial, sans-serif;
    }

    .menu-divider {
        border: none;
        border-top: 2px solid red;
        margin: 2.5em 0 1.5em 0;
        width: 90%;
    }

    .menu-images-row {
        display: flex;
        justify-content: center;
        gap: 24px;
        margin: 2em 0 1em 0;
    }

    .menu-image-placeholder {
        width: 180px;
        height: 90px;
        background: red;
        color: #222;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1rem;
        border-radius: 6px;
        border: 2px solid red;
    }

</style>

<!-- Google Fonts para Dancing Script -->
<link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap" rel="stylesheet">

