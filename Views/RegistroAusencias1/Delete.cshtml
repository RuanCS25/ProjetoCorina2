@model ProjetoCorina2.Models.RegistroAusencia

@{
    ViewData["Title"] = "Excluir Registro de Ausência";
}

<style>
    .registro-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 24px #0001;
        padding: 32px 24px 24px 24px;
        margin: 32px auto;
        max-width: 600px;
    }

    .registro-title {
        text-align: center;
        font-size: 2rem;
        font-weight: 700;
        color: #b71c1c;
        margin-bottom: 18px;
        letter-spacing: 1px;
    }

    .registro-dl dt {
        font-weight: 600;
        color: #b71c1c;
    }

    .registro-dl dd {
        margin-bottom: 12px;
    }
</style>

<div class="registro-card">
    <div class="registro-title">@ViewData["Title"]</div>
    <hr />
    <h5 class="text-center text-danger mb-4">Tem certeza de que deseja excluir este registro?</h5>
    <dl class="row registro-dl">
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Aluno)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Aluno.Nome)</dd>
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Data)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Data)</dd>
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Refeicao)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Refeicao)</dd>
    </dl>
    <form asp-action="Delete" class="text-center mt-4">
        <input type="hidden" asp-for="RegistroAusenciaId" />
        <input type="submit" value="Deletar" class="btn btn-danger px-4" />
        <a asp-action="Index" class="btn btn-outline-danger ms-2">Voltar</a>
    </form>
</div>
