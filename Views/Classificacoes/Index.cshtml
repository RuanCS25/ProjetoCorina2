@model IEnumerable<ProjetoCorina2.Models.Classificacoe>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-dark table-striped ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClassificacoeId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ClassificacoeId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClassificacoeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
