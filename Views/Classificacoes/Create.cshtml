@model ProjetoCorina2.Models.Classificacoe

@{
    ViewData["Title"] = "Nova Classificação";
}

<h1>Nova Classificação</h1>

<h4>Cadastro de Classificação</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Descricao" class="control-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" placeholder="Informe a descrição da classificação" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-secondary" />
                <a asp-action="Index" class="btn btn-outline-danger">Sair</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
