@model ProjetoCorina2.Models.Classificacoe

@{
    ViewData["Title"] = "Excluir Classificação";
}

<h1>Excluir Classificação</h1>

<h3>Confirmar Exclusão</h3>
<div class="alert alert-warning">
    <strong>Atenção!</strong> Você está prestes a excluir permanentemente esta classificação. Esta ação não pode ser desfeita.
</div>

<div>
    <h4>Dados da Classificação</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ClassificacoeId" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Confirmar Exclusão
            </button>
            <a asp-action="Index" class="btn btn-secondary ml-2">
                <i class="fas fa-arrow-left"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}