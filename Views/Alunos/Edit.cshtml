@model ProjetoCorina2.Models.Aluno

@{
    ViewData["Title"] = "Editar Aluno";
}

<style>
    .aluno-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 24px #0001;
        padding: 32px 24px 24px 24px;
        margin: 32px auto;
        max-width: 600px;
    }

    .aluno-title {
        text-align: center;
        font-size: 2rem;
        font-weight: 700;
        color: #b71c1c;
        margin-bottom: 18px;
        letter-spacing: 1px;
    }
</style>

<div class="aluno-card">
    <div class="aluno-title">@ViewData["Title"]</div>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="AlunoId" />
        <div class="row g-3">
            <div class="col-12">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Celular" class="form-label"></label>
                <input asp-for="Celular" class="form-control" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="CPF" class="form-label"></label>
                <input asp-for="CPF" class="form-control" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="ClassificacoeId" class="form-label">Classificação</label>
                <select asp-for="ClassificacoeId" class="form-select" asp-items="ViewBag.ClassificacoeId"></select>
                <span asp-validation-for="ClassificacoeId" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="HorarioId" class="form-label">Horário</label>
                <select asp-for="HorarioId" class="form-select" asp-items="ViewBag.HorarioId"></select>
                <span asp-validation-for="HorarioId" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="Senha" class="form-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
        </div>
        <div class="mt-4 text-center">
            <input type="submit" value="Salvar" class="btn btn-secondary px-4" />
            <a asp-action="Index" class="btn btn-outline-danger ms-2">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
