@model ProjetoCorina2.Models.Aluno

@{
    ViewData["Title"] = "Create";
}

<h2 class="display-6 text-center">Cadastro de Alunos</h2>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-6">
        <div class="form-group">
            <label asp-for="Celular" class="control-label"></label>
            <input asp-for="Celular" class="form-control" maxlength="11" />
            <span asp-validation-for="Celular" class="text-danger"></span>
        </div>
    </div>

    <div class="col-12 col-lg-6">
        <div class="form-group">
            <label asp-for="CPF" class="control-label"></label>
            <input asp-for="CPF" class="form-control" maxlength="11" />
            <span asp-validation-for="CPF" class="text-danger"></span>
        </div>
    </div>


    <div class="row">
        <div class="col-10 col-lg-6">
            <div class="form-group">
                <label asp-for="ClassificacoeId" class="control-label">Classificação</label>
                <select asp-for="ClassificacoeId" class="form-control" asp-items="ViewBag.ClassificacoeId"></select>
            </div>
        </div>
        <div class="col-2">
            <div class="form-group">
                <label asp-for="HorarioId" class="control-label">Horario</label>
                <select asp-for="HorarioId" class="form-control" asp-items="ViewBag.HorarioId"></select>
            </div>
        </div>
        <div class="col-12 col-lg-4">
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" type="password" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-6 mt-3">
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-secondary" />
                <a asp-action="Index" class="btn btn-outline-danger">Voltar</a>
            </div>
</form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
