@model ProjetoCorina2.Models.Aluno

@{
    ViewData["Title"] = "Detalhes do Aluno";
}

<style>
    .aluno-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 24px #0001;
        padding: 32px 24px 24px 24px;
        margin: 32px auto;
        max-width: 600px;
    }

    .aluno-title {
        text-align: center;
        font-size: 2rem;
        font-weight: 700;
        color: #b71c1c;
        margin-bottom: 18px;
        letter-spacing: 1px;
    }

    .aluno-dl dt {
        font-weight: 600;
        color: #b71c1c;
    }

    .aluno-dl dd {
        margin-bottom: 12px;
    }
</style>

<div class="aluno-card">
    <div class="aluno-title">@ViewData["Title"]</div>
    <hr />
    <dl class="row aluno-dl">
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Celular)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Celular)</dd>
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CPF)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.CPF)</dd>
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Classificacoe)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Classificacoe.Descricao)</dd>
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Horario)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Horario.Turno)</dd>
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Senha)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Senha)</dd>
    </dl>
    <div class="text-center mt-4">
        <a asp-action="Edit" class="btn btn-secondary px-4" asp-route-id="@Model?.AlunoId">Editar</a>
        <a asp-action="Index" class="btn btn-outline-danger ms-2">Voltar</a>
    </div>
</div>
